{
  "name": "@securewatch/scripts",
  "version": "1.0.0",
  "description": "Utility scripts for SecureWatch SIEM",
  "scripts": {
    "monitor": "npx tsx service-monitor.ts",
    "monitor:startup": "npx tsx service-monitor.ts startup",
    "monitor:continuous": "npx tsx service-monitor.ts monitor 30",
    "monitor:metrics": "npx tsx service-monitor.ts metrics",
    "update-readme": "node update-readme.js",
    "update-readme-advanced": "node update-readme-advanced.js",
    "test-readme": "node update-readme.js --dry-run"
  },
  "dependencies": {
    "axios": "^1.9.0",
    "cheerio": "^1.1.0",
    "moment": "^2.30.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsx": "^4.6.2"
  }
}
