# Use pnpm for this project
engine-strict=true

# Ensure workspace packages are linked correctly
link-workspace-packages=true

# Hoist pattern for better compatibility
public-hoist-pattern[]="*"
shamefully-hoist=true

# Handle cross-platform builds
node-linker=hoisted
auto-install-peers=true

# Support optional dependencies for different platforms
supportedArchitectures.os=["darwin", "linux", "win32"]
supportedArchitectures.cpu=["x64", "arm64"]
supportedArchitectures.libc=["glibc", "musl"]