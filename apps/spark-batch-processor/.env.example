# Environment Configuration
NODE_ENV=development
LOG_LEVEL=info
PORT=3000

# Spark Configuration
SPARK_MASTER=spark://localhost:7077
SPARK_APP_NAME=SecureWatch-BatchProcessor
SPARK_EXECUTOR_MEMORY=4g
SPARK_EXECUTOR_CORES=4
SPARK_DRIVER_MEMORY=2g
SPARK_MAX_RESULT_SIZE=2g
SPARK_SERIALIZER=org.apache.spark.serializer.KryoSerializer
SPARK_CHECKPOINT_DIR=/tmp/spark-checkpoint
SPARK_WATERMARK_DELAY=10 minutes
SPARK_MAX_RECORDS_PER_TRIGGER=1000000
SPARK_ADAPTIVE_QUERY_EXECUTION=true
SPARK_ADAPTIVE_SKEW_JOIN=true
SPARK_BROADCAST_TIMEOUT=300
SPARK_NETWORK_TIMEOUT=120

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPICS=log-events-raw,log-events-normalized
KAFKA_STARTING_OFFSETS=latest
KAFKA_MAX_OFFSETS_PER_TRIGGER=1000000
KAFKA_FAIL_ON_DATA_LOSS=false
KAFKA_INCLUDE_HEADERS=true
KAFKA_CONSUMER_POLL_TIMEOUT_MS=120000
KAFKA_SECURITY_PROTOCOL=PLAINTEXT
# KAFKA_SASL_MECHANISM=PLAIN
# KAFKA_SASL_USERNAME=
# KAFKA_SASL_PASSWORD=

# Machine Learning Configuration
ML_ANOMALY_DETECTION_ENABLED=true
ML_MODEL_PATH=/app/models
ML_BATCH_SIZE=10000
ML_TRAINING_INTERVAL=24h
ML_MODEL_REFRESH_INTERVAL=1h
ML_FEATURE_COLUMNS=timestamp,source_ip,dest_ip,port,event_type,severity
ML_ANOMALY_THRESHOLD=0.8
ML_ENABLE_AUTO_ML=false

# Batch Processing Configuration
BATCH_TRIGGER_INTERVAL=5 minutes
BATCH_OUTPUT_MODE=append
BATCH_OUTPUT_PATH=/app/output
BATCH_PARTITION_BY=year,month,day,hour
BATCH_COMPRESSION=zstd
BATCH_MAX_FILES_PER_TRIGGER=1000
BATCH_CLEAN_SOURCE_ARCHIVE=false
BATCH_ENABLE_DATA_QUALITY_CHECKS=true

# Storage Configuration
PRIMARY_STORAGE=opensearch
ARCHIVE_STORAGE=s3
RETENTION_HOT=7d
RETENTION_WARM=30d
RETENTION_COLD=90d
RETENTION_DELETE=365d
STORAGE_COMPRESSION_RATIO=0.3
STORAGE_ENABLE_INDEX_OPTIMIZATION=true

# OpenSearch/Elasticsearch Configuration
OPENSEARCH_HOST=localhost:9200
OPENSEARCH_USERNAME=admin
OPENSEARCH_PASSWORD=admin
OPENSEARCH_SSL=false
OPENSEARCH_SSL_VERIFY=false

# S3 Configuration (for archive storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET=securewatch-archive
S3_PREFIX=batch-processed/

# Monitoring Configuration
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30000

# Security Configuration
ENABLE_AUTH=false
JWT_SECRET=your-jwt-secret-key
API_RATE_LIMIT=1000